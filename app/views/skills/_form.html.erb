 <div class="row">
  <div class="span6 offset3">
    <%= form_for(@skill) do |s| %>
      <%= render 'shared/error_messages', object: s.object %>

      <%= s.label :name, "曲名" %>
      <%= s.collection_select :music_id, Music.all, :id, :name %>

      <%= s.label :kind, "難易度" %>
      <%= s.select :kind, [["BSC",0],
     ["ADV",1],
     ["EXT",2],
     ["MAS",3]] %>

      <%= s.label :rate, "達成率" %>
      <%= s.text_field :rate %> ％

      <%= s.label :isfc, "フルコンボ？" %>
      <%= s.check_box :isfc %>
      
      <%= s.label :comment, "コメント" %>
      <%= s.text_field :comment %>

      <%= s.submit "登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
