<% provide(:title, 'スキル登録') %>
<h1>スキル登録</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@skill) do |s| %>
      <%= render 'shared/error_messages', object: s.object %>

      <%= s.label :name, "曲名" %>
      <%= s.collection_select :music_id, Music.all.order("name ASC"), :id, :name, {}, {:class => 'searchable'} %>

      <%= s.label :kind, "難易度" %>
      <%= s.select :kind, kind_choices %> 

      <%= s.label :rate, "達成率" %>
      <%= s.text_field :rate, placeholder: "例: 86.79" %>

      <%= s.label :isfc, "FULL COMBO" %>
      <%= s.check_box :isfc %>
      
      <%= s.label :comment, "コメント" %>
      <%= s.text_field :comment, placeholder: "省略可" %>

      <%= s.submit "登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
