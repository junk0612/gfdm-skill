<table id="sTable_musics" class="table table-striped table-bordered table-hover table-condensed display compact">
  <thead>
    <tr>
      <th rowspan="2">Name</th>
      <th colspan="4">Drum</th>
      <th colspan="4">Guitar</th>
      <th colspan="4">Bass</th>
    </tr>
    <tr>
      <th>BSC</th>
      <th>ADV</th>
      <th>EXT</th>
      <th>MAS</th>
      <th>BSC</th>
      <th>ADV</th>
      <th>EXT</th>
      <th>MAS</th>
      <th>BSC</th>
      <th>ADV</th>
      <th>EXT</th>
      <th>MAS</th>
    </tr>
   </thead>

  <tbody>
  <% @musics.each do |music| %>
    <tr>
    <td><%= music.name %></td>
    <td><%= if music.d_bsc != 0.0
              music.d_bsc
            else "-"
            end %></td>
    <td><%= if music.d_adv != 0.0
              music.d_adv
            else "-"
            end %></td>
    <td><%= if music.d_ext != 0.0
            music.d_ext
            else "-"
            end %></td>
    <td>
      <%= if music.d_mas != 0.0
            music.d_mas
          else "-"
          end %>
    </td>
    <td>
      <%= if music.g_bsc != 0.0
          music.g_bsc
          else "-"
          end %></td>
        <td><%= if music.g_adv != 0.0
                  music.g_adv
                else "-"
                end %></td>
  <td><%= if music.g_ext != 0.0
            music.g_ext 
          else "-"
          end %></td>
        <td><%= if music.g_mas != 0.0
                  music.g_mas 
                else "-"
                end %></td>
        <td><%= if music.b_bsc != 0.0
                  music.b_bsc 
                else "-"
                end %></td>
        <td><%= if music.b_adv != 0.0
                  music.b_adv
                else "-"
                end %></td>
        <td><%= if music.b_ext != 0.0
                  music.b_ext 
                else "-"
                end %></td>
        <td><%= if music.b_mas != 0.0
                  music.b_mas 
                else "-"
                end %></td>
            </tr>
    <% end %>
      </tbody>
    </table>
