<% provide(:title, "アカウント情報変更") %>
<h1>アカウント情報変更</h1>

<div class="row">
    <div class="form-horizontal" role="form">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
      <%= f.label :name, "名前", :class => "col-sm-3 control-label" %>
      <div class="col-sm-6">
      <%= f.text_field :name, placeholder: "プロフィール画面に表示されます．" %>
      </div>
      </div>

      <div class="form-group">
      <%= f.label :email, "メールアドレス", :class => "col-sm-3 control-label"  %>
      <div class="col-sm-6">
      <%= f.text_field :email, placeholder: "ログインの際に必要になります．" %>
      </div>
      </div>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード (確認)" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :d_comment, "コメント (Drummania用)" %>
      <%= f.text_area :d_comment %>
      
      <%= f.label :g_comment, "コメント (GuitarFreaks用)" %>
      <%= f.text_area :g_comment %>

      <%= f.label :profile, "コメント (プロフィールページ用)" %>
      <%= f.text_area :profile %>
      
      <%= f.submit "変更", class: "btn btn-large btn-primary" %>
    <% end %>
    </div>
  </div>
</div>