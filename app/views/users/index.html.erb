<% provide(:title, 'ユーザ一覧') %>
<h1>ユーザ一覧</h1>

<%= will_paginate %>

<table class="table table-striped table-bordered table-hover table-condensed">
   <thead>
      <tr>
        <th>id</th>
        <th>name</th>
        <th>スキル</th>
      </tr>
    </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td>
      <%= link_to user.name, user %>
      </td>
      <% if current_user.admin? && !current_user?(user) %>
      <td>
    <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
      </td>
  <% end %>
    </tr>
  <% end %>
  </tbody>

<%= will_paginate %>
